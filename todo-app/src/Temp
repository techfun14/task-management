<header className="header">
      <div className="nav-left">
        <h1 className="logo">Task Manager</h1>
      </div>
      <nav className="navbar">
        {isAuthenticated && 
          (<>
            <button onClick={() => navigate(`/welcome/${usrname}`)} className="nav-link">Home</button>
            <button onClick={() => navigate("/list-todos")} className="nav-link">Todos</button>
          </>)
        }
      </nav>
      <div className="user-controls">
        {isAuthenticated ? (
          <button
            className="logout-btn"
            onClick={() => {
              navigate('/logout');
              authContext.logout() // You should have this in your context!
              
            }}
          >
            Logout
          </button>
        ) : (
          <button className="login-btn" onClick={() => navigate("/")}>
            Login
          </button>
        )}
      </div>
    </header>
